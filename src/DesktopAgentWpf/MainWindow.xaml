<Window x:Class="DesktopAgentWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InterviewGhost" Height="720" Width="900" ShowInTaskbar="False">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Server:" FontWeight="Bold" Margin="0,0,6,0" />
            <TextBlock Text="{Binding ServerStatus}" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="URL for phone:" FontWeight="Bold" />
                <TextBox Text="{Binding ServerUrl}" IsReadOnly="True" Margin="0,4,0,0" />
            </StackPanel>
            <Button Grid.Column="1" Content="Copy URL" Width="120" Height="32" Margin="12,16,0,0" Click="CopyUrl_Click" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Output device:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding OutputDevices}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedOutputDeviceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectionChanged="OutputDevice_SelectionChanged"
                      Height="28" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Input device:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox Grid.Column="1"
                      ItemsSource="{Binding InputDevices}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedInputDeviceId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectionChanged="InputDevice_SelectionChanged"
                      Height="28" />
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,8">
            <Button Content="Test devices (2s)" Width="160" Height="28" Click="TestDevices_Click" />
        </Grid>

        <Border Grid.Row="5" BorderBrush="#CCC" BorderThickness="1" Padding="8" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Width="180" Height="180" Source="{Binding QrImage}" Stretch="Uniform" />
                <TextBlock Text="Scan QR on your phone" Margin="16,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="6" Margin="0,0,0,8"
                    Visibility="{Binding RagVisible, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="{Binding RagStatus}" FontWeight="Bold" Margin="0,0,0,4" />
            <ProgressBar Minimum="0" Maximum="100" Height="16" Value="{Binding RagProgress}" />
        </StackPanel>

        <GroupBox Grid.Row="7" Header="Logs (last 200 lines)">
            <ListBox ItemsSource="{Binding Logs}" FontFamily="Consolas" FontSize="12" />
        </GroupBox>
    </Grid>
</Window>
